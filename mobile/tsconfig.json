{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./app/assets/*"],
      "@components/*": ["./app/components/*"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"],
      "@services/*": ["./services/*"],
      "@auth/*": ["./app/(auth)/*"],
      "@user/*": ["./app/(user)/*"],
      "@bsn/*": ["./app/(bsn)/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
